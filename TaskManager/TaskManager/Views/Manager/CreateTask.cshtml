@model TaskDomain.DomainModel.TaskDm

@{
    ViewBag.Title = "CreateTask";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";

}

<script src="~/Scripts/kendo/jquery.min.js"></script>
<script src="~/Scripts/kendo/kendo.all.min.js"></script>
<script src="~/Scripts/kendo/kendo.aspnetmvc.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
</script>
<script src="bootstrap/js/bootstrap.min.js"></script>
<div class="row-wrapper border-bottom white-bg page-heading" style="margin-left:-15px;margin-right:-15px;height:95px;">
    <br />
    <div class="col-lg-10">
        <h2><b>Add Task Details </b></h2>
    </div>
</div>

@*<div class="wrapper wrapper-content animated fadeInRight">*@
<div class="row">

    <div class="ibox float-e-margins">
        <div class="wrapper wrapper-content">
            <div class="ibox-title">
                <h5>Create New Task</h5>
            </div>




            @using (Html.BeginForm("AddTask", "Manager", FormMethod.Post))
            {

                <div class="ibox-content">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Title")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Title" })
                              
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Assign To")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                               @Html.DropDownListFor(model => model.AssignedTo, ViewBag.Employee as IEnumerable<SelectListItem>, "-- Select Assignee To--", new { @class = "form-control", style = "160%" })
                              
                            </div>
                        </div>
                        <div></div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">

                                @Html.Label("Start Date")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @(Html.Kendo().DatePickerFor(model => model.StartDate)
                       .Name("StartDate")
                       .Value(DateTime.Now)
                       .HtmlAttributes(new { @class = "form-control", style = "width: 280px" }))
                               
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">

                                @Html.Label("End Date")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @(Html.Kendo().DatePickerFor(model => model.EndDate)
                       .Name("EndDate")
                       .Value(DateTime.Now)
                       .HtmlAttributes(new { @class = "form-control ", style = "width: 280px" })
                                ) 
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Description")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description" })
                            </div>
                        </div>
                       
                            
                        <div><input type="submit" value="Create" class="btn btn-success " /></div>
                        

                    </form>
                </div>
            }
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/kendo")
