@model TaskDomain.DomainModel.UserDetailDm

@{
    ViewBag.Title = "SaveUserDetails";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";

}
@*<link href="~/Content/intlTelInput1.css" rel="stylesheet" />*@
<link href="~/Content/intlTelInput.css" rel="stylesheet" />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="row-wrapper border-bottom white-bg page-heading" style="margin-left:-15px;margin-right:-15px;height:95px;">
    <br />
    <div class="col-lg-10">
        <h2><b>Add User Details </b></h2>
    </div>
</div>


<div class="row">

    <div class="ibox float-e-margins">
        <div class="wrapper wrapper-content">
            <div class="ibox-title">
                <h5>Add User</h5>
            </div>
            @using (Html.BeginForm("SaveUserDetails", "Admin", FormMethod.Post))
            {

                <div class="ibox-content">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("First Name")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "error", style = "color:red" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Last Name")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "error", style = "color:red" })
                            </div>
                        </div>
                        <div></div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">

                                @Html.Label("Phone no")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.HiddenFor(m => m.DialCode, new { @class = "form-control", placeholder = "" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "XXXXXXXXXX" })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "error", style = "color:red" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">

                                @Html.Label("Email Id")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email Id - ex:abcd@gmail.com" })
                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "error", style = "color:red" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Role Name")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.DropDownListFor(m => m.RoleId, (SelectList)ViewBag.List, "--Select Roles--", new
                           {
                               @class = "form-control",
                               style = "160%"
                           })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                @Html.Label("Manager Name")
                            </label>
                            <div class="col-lg-10" style="margin-bottom:10px;">
                                @Html.DropDownListFor(m => m.ManagerId, (SelectList)ViewBag.List1, "--Select Manager--", new
                           {
                               @class = "form-control",
                               style = "160%"
                           })
                            </div>
                        </div>

                        <button type="submit" class="btn btn-sm btn-success" id="btn" onclick="notify()">Add User</button>

                    </form>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Scripts/pnotify.custom.min.js"></script>
<link href="~/Content/pnotify.custom.min.css" rel="stylesheet" media="all" type="text/css" />
<script type="text/javascript">
    function notify() {
        if (($('#FirstName').val() != "") && ($('#LastName').val() != "") && ($('#PhoneNumber').val() != "") && ($('#EmailId').val() != "") && ($('#RoleId').val() != "")) {
            PNotify({
                title: 'Success!',
                text: 'New user is added successfully.'
            });
        }
    }
</script>


