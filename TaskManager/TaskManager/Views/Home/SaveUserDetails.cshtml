@model TaskDomain.DomainModel.UserdetailDm

@{
    ViewBag.Title = "SaveUserDetails";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";

}


<div class="row-wrapper border-bottom white-bg page-heading" style="margin-left:-15px;margin-right:-15px;height:95px;">
    <br />
    <div class="col-lg-10">
        <h2><b>Add User Details </b></h2>
    </div>
</div>

@*<div class="wrapper wrapper-content animated fadeInRight">*@
    <div class="row">

        <div class="ibox float-e-margins">
            <div class="wrapper wrapper-content">
                <div class="ibox-title">
                    <h5>Add User</h5>
                </div>




                @using (Html.BeginForm("SaveUserDetails", "Home", FormMethod.Post))
            {

                    <div class="ibox-content">

                        <form class="form-horizontal">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">
                                    @Html.Label("First Name")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                    @*@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "error" })*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">
                                    @Html.Label("Last Name")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                                    @*@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "error" })*@
                                </div>
                            </div>
                            <div></div>

                            <div class="form-group">
                                <label class="col-lg-2 control-label">

                                    @Html.Label("Phone no")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone No" })
                                    @*@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "error" })*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">

                                    @Html.Label("Email Id")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @placeholder = "Email Id - ex:abcd@gmail.com" })
                                    @*@Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "error" })*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">
                                    @Html.Label("Role Name")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.DropDownListFor(m => m.RoleId, (SelectList)ViewBag.List, "--Select Roles--", new { @class = "form-control", style = "160%" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">
                                    @Html.Label("Manager Name")
                                </label>
                                <div class="col-lg-10" style="margin-bottom:10px;">
                                    @Html.DropDownListFor(m => m.ManagerId, (SelectList)ViewBag.List1, "--Select Manager--", new { @class = "form-control", style = "160%" })
                                </div>
                            </div>

                            <button type="submit" class="btn btn-sm btn-success" onclick="@("window.location.href='" + @Url.Action("ViewUserDetails", "Home") + "'");">Add User</button>

                        </form>
                    </div>
                }
            </div>
            </div>
</div>
@*</div>*@