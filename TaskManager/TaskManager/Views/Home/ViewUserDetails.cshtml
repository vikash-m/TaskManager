<div class="wrapper wrapper-content">
    <div class="ibox-title">
        <h5>View User Details</h5>
    </div>

    <div class="ibox-content">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-sm btn-primary" onclick="@("window.location.href='" + @Url.Action("SaveUserDetails","Home") + "'");" />Add User <i class="fa fa-plus"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <table class="table table-striped table-bordered table-hover dataTables">

            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email Id</th>
                <th>Role Name</th>
                <th>Manager Name</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.EmailId</td>
                    <td>@item.RoleName</td>
                    <td>@item.ManagerName</td>
                    <td>
                        <a onclick="return confirm('Are you sure you want to delete?')" href="@Url.Action("DeleteUser", "Home", new {id=item.Id})"><i class="fa fa-trash-o" style="color:red"></i></a>
                        |
                        <a href="@Url.Action("EditUserDetails", "Home", new {id=item.Id})"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("ViewUserDetails", new { page }))
    </div>
</div>