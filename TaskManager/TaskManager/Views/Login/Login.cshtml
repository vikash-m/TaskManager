@model TaskDomain.DomainModel.LoginUserDm
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "UserName/EmailID", @required = "required" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @type = "Password", @required = "required" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                if (ViewBag.message != null)
                {
                <div class="text-center text-danger">@ViewBag.message</div>
                }
                <input type="submit" id="btnsubmit" value="Login" class="btn btn-primary block full-width m-b" />
}
